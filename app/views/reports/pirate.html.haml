        .title Retention
        .sub_title Active & activated users
      %td
        .big_num= number @retention[:total]
      %td(class="#{@retention[:delta].to_f < 0 ? 'down' : 'up'}")
        = percent @retention[:delta]
      %td.chart_cell
        .chart
        :javascript
          $(function() { 
            Vanity.retention_graph('.retention .chart').plot(#{@retention[:chart]}); 
          })

    %tr.referral
      %td.category
        .title Referral
        .sub_title # NM shared to
      %td
        .big_num= number @referral[:total]
        .small_num
          - @clients.each do |client|
            %span #{client.capitalize}: #{number @referral[:by_client][client]}
      %td(class="#{@referral[:delta].to_f < 0 ? 'down' : 'up'}")
        = percent @referral[:delta]
      %td.chart_cell
        .chart
        :javascript
          $(function() { 
            Vanity.retention_graph('.referral .chart').plot(#{@referral[:chart]}); 
          })

    %tr.revenue
      %td.category
        .title Revenue
        .sub_title # of Premium Subscribers
      %td
        .big_num -
      %td.up -
      %td.chart_cell
        .chart 
