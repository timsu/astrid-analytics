:css
  body { color: white; background: black; text-align: center; font-family: "Eurostile", "Futura", "Courier New", monospace }
  .env { color: #bef }
  .main .title { font-size: 250px;  line-height: 260px }
  .main .subtitle { font-size: 30px; line-height: 40px }
  .minor { padding: 10px 5px }
  .minor .title { font-size: 64px; line-height: 74px; }
  .minor .subtitle { font-size: 22px; }
  .yesterday { color: #ccc }
  .oneweekago { color: #aaa }
  .fourweeksago { color: #888 }
  #retention_chart { width: 510px; height: 320px; margin: 15px 30px; }
  #tooltip { color: black }
  .marking.label { position: absolute; bottom: 2em; color: #c66; font-size: 80% }
  .ticklabel { font-size: 16px; color: #333; position: absolute; margin-right: 50px }

.row
  .span12.main
    .title
      = number_to_human @today, :units => {:unit => "", :thousand => "K", :million => "M"}
    .subtitle
      \# of activated users on
      %span.env= @account_data["name"]
      in the past 168 hours

.row
  .span7.offset1
    #retention_chart
    :javascript
      $(function() { 
        Vanity.retention_graph('#retention_chart',#{@min},#{@max}).plot(#{@chart}); 
      })

  .span3
    .minor.yesterday
      .title
        = number_to_human @yesterday, :units => {:unit => "", :thousand => "K", :million => "M"}
      .subtitle
        Yesterday

    .minor.oneweekago
      .title
        = number_to_human @last_week, :units => {:unit => "", :thousand => "K", :million => "M"}
      .subtitle
        One week ago

    .minor.fourweeksago
      .title
        = number_to_human @four_weeks_ago, :units => {:unit => "", :thousand => "K", :million => "M"}
      .subtitle
        Four weeks ago
